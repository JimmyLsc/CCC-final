version: "3"
services:
  web:
    restart: always
    build:  /CCC-Assignment2
    ports:
    - "8080:8080"
  couchdb:
    container_name: "couchdb"
    image: ibmcom/couchdb3:3.0.0
    hostname: couchdb
    ports:
      - 5984:5984
      - 5986:5986
      - 4369:4369
      - 9100-9200:9100-9200
    environment:
      - COUCHDB_USER=admin
      - COUCHDB_PASSWORD=admin
      - NODENAME={{ ansible_host }}
  listening:
    restart: always
    build: /CCC-Assignment2/listening
